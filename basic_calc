#include<stdio.h>
#include<conio.h>
void main()
{
int a,b,c;
char op;
clrscr();
printf("enter the operator:");
scanf("%c",&op);
printf("enter the value of a:");
scanf("%d",&a);
printf("enter the value of c:");
scanf("%d",&c);
switch(op)
{
case '+':
printf("%d + %d = %d",a,c,a+c);
break;
case '-':
printf("%d - %d = %d",a,c,a-c);
break;
case '*':
printf("%d * %d = %d",a,c,a*c);
break;
case '/':
printf("%d / %d = %d",a,c,a/c);
break;
}
getch();
}
